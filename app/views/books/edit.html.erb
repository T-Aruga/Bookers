

<div class="container">
  <div class="row">
<!-- 投稿内容編集 -->
      <div class="col-md-6 col-md-offset-3">
          <h1>Editing book</h1>

          <!-- エラーメッセージ -->
            <% if @book.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h5><%= "#{@book.errors.full_messages.count} errors prohibited this book from being saved:" %></h5>
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                  <ul>
                    <li><%= message %></li>
                  </ul>
                  <% end %>
                </ul>
              </div>
            <% end %>

          <%= form_for(@book) do |f| %>
                  <div class="form-group has-icon">
                      <label class="control-label" for="inputEmail">Title</label>
                      <%= f.text_field :title, class: "form-control" %>
                  </div>

                  <h4 class="form-body">Opinion</h4>
                  <%= f.text_area :body, class: "form-control" %>

                  <div class="form-submit col-xs-12 btn">
                      <%= f.submit "Update Book", class: "btn-primary form-control" %>
                  </div>
          <% end %>
          <%= link_to "Show", book_path(@book.id)  %>
          <a> | </a>
          <%= link_to "Back", books_path %>
        </div>
    </div>
</div>
