
<div class="container">


<!-- ユーザー情報編集 -->
    <h2>User info</h2>

<!-- エラーメッセージ -->
    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h5><%= "#{@user.errors.full_messages.count} errors prohibited this book from being saved:" %></h5>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
          <% end %>
        </ul>
      </div>
    <% end %>


    <%= form_for(@user) do |f| %>
            <div class="form-group has-icon">
                <label class="control-label" for="inputEmail">Name</label>
                <%= f.text_field :name %>
            </div>

            <div class="form-group has-icon">
                <div class="user-edit-image">
                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
                </div>
                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
            </div>

            <h4 class="form-body">introduction</h4>
            <%= f.text_area :introduction %>

            <div class="form-submit">
                <%= f.submit "Update User"%>
            </div>
    <% end %>
</div>
